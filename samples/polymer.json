{
  "entrypoint": "index.html",
  "builds": [
    {
      "preset": "es5-bundled",
      "insertPrefetchLinks": false,
      "addPushManifest": false,
      "addServiceWorker": false,
      "js": {
        "minify": false,
        "compile": true
      },
      "css": {
        "minify": false
      },
      "html": {
        "minify": false
      }
    }
  ],
  "sources": [
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "bower_components/iron-demo-helpers/*.html",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  }
}
